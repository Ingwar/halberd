<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView android:id="@+id/playlist_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/playlist_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/playlist_song_title"/>
    
    <TextView android:id="@+id/delim"
        android:text="@string/playlist_delimiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/playlist_artist"
        android:layout_below="@id/playlist_song_title"
        android:layout_centerHorizontal="true"/>
    
        <TextView
        android:id="@+id/playlist_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/delim"
        android:layout_below="@id/playlist_song_title"/>
    
</RelativeLayout>