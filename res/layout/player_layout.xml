<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <TextView android:id="@+id/current_song"
      android:scrollHorizontally="true"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="marquee_forever"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:focusable="true"
      android:focusableInTouchMode="true"/> 
  
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_gravity="center">
  
  <ImageButton  android:id="@+id/prev_song"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/previous_button" />
  
  <ToggleButton  android:id="@+id/playing_toggle"
    android:textOn=""
    android:textOff=""
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/play_toggle_button" />
      
  <ImageButton  android:id="@+id/next_song"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content" 
  android:background="@drawable/next_button"/>
  
  </LinearLayout>

  <SeekBar
      android:id="@+id/playback_progressbar"
      android:indeterminate="false"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  
  <ListView
      android:id="@+id/playlist"
      android:layout_width="match_parent"
      android:layout_height="338dp" />
  
  </LinearLayout>
